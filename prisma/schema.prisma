// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id           String  @id @default(uuid()) @map("_id") @db.ObjectId
  clientCod    Int
  client       String
  name         String
  register     String  @unique
  phone        Int
  ddd          Int
  email        String?
  zipCode      String
  address      String
  city         String
  neighborhood String
  type         String
}

model Product {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  unity             String
  available         Int
  lastEntrance      Int
  lastEntranceTotal Int
  code              Int
}
